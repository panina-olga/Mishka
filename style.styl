        }

        .content_main-button{
            padding: 20px 40px;
        }
    }

}
















@media (max-width: 767px) {

    .header-container > .header-right{  
        display: none;
    }

    .content{
        padding: 0;
    }  

    .header-container{
        height: 78px;
    } 
    
    .header{
        border-top: 1px solid #e7e7e7;
        padding: 0 30px;
    }

    .about__title{
        margin-top: 75px;
        font-size: 26.35px;
        color: rgb(1, 0, 0);
        font-weight: bold;
        line-height: 1.111;
        text-align: center;
        padding: 0 30px;
    }

    .about__product{
        flex-direction: column;    
    }

    .about::after{
        display: none;
    }

    .about-header{
        display: none;
    }   

    .header__burger{
        right: 0px;
        display: block;
        position: absolute;
        width: 20px;
        height: 14px;
    }

    .header__burger:before, .header__burger:after{
        content:"";
        background-color: #221f1f;
        position: absolute;
        width: 100%;
        height: 2px;
        left:0;
    }

    .header__burger:before{
        top:0;
    }

    .header__burger:after{
        bottom: 0;
    }

    .header__burger span{
        position: absolute;
        width: 100%;
        height: 2px;
        left:0;
        background-color: #221f1f;
        top: 6px;
    }

    .about{
        background-position: top -18px center;
        background-image: url(img/hero-mobile.png);
        background-repeat: no-repeat;
        height: 489px;
    }

    .product__left-link, .product__right-link{
        align-items: center;
        height: 100px;
        flex: 1 1 auto;
    }

    .product__name{
        font-size: 19px;
        color: rgb(255, 255, 255);
        line-height: 1.263;
    }

    .header-text{
        font-size: 25px;
        line-height: 1.2;
    }

    .border-wave{
        display: none;
    }

    .product-week{
        .main-content{
            max-width: 260px;
            height: auto;
            margin: 0px auto;
        }
    }

    .content_title{
        font-size: 25px;
        line-height: 1.2;
    }

    .product-week{
        margin-top: 33px;
        }

    .product-week__header{
        margin-bottom: 30px;
        flex-direction: column-reverse;
        align-items: flex-start;
    }

    .product-week__name-block{
        padding: 8px 0px 0px 0px;
        flex-basis: auto;
        
