        margin-bottom: 30px;

        .advantages-item__text{
            font-size: 17px;
            font-weight: bold;
            line-height: 1.176;
        }
    }

    .reviews{
        padding-top: 0px;
        background: none;

        .main-content{
            max-width: 260px;
            margin: 0 auto;
        }

        .reviews__title{
            margin-bottom: 35px;
        }

        .reviews__text{
            font-size: 15px;
            color: rgb(68, 68, 68);
            line-height: 2;
            margin-bottom: 40px;
        }

        .reviews__author-name{
            font-size: 17px;  
            color: rgb(0, 0, 0);
            font-weight: bold;
            line-height: 1.412;
        }

        .reviews__author-email{
            margin-top: 12px;
            font-size: 17px;
            color: #444444;
            margin-bottom: 35px;
        }

        .reviews__write-btn{
            position: static;
            width: 100%;

            .content_main-button{
                width: 100%;
            }
        }

        .reviews__swipe-btn{
            position: static;
            width: 100%;
            margin-bottom: 38px;

            button{
                border: 1px solid #ececec;
                width: 50%;
                background-color: #ffffff;
            }

            button + button{
                border-left: none;
            }
