    }



    .contacts{
        margin-top: 43px;
        margin-bottom: 39px;

        .main-content{
            max-width: 260px;
            margin: 0 auto;    
        }

        .contacts__header{
            display: block;
            margin-left: 0px;
            margin-bottom: 19px;
        }

        .contacts__icon{
            display: none;
        }

        .contacts__text{
            max-width: 256px;
            margin-bottom: 42px;
            font-size: 15px;
            line-height: 2;

            tr{
                display: table-row;
            }

            td{
                min-width: 73px;
                vertical-align: top;
            }
        }

        .contacts__map{
            position: static;
            margin: 0 -30px 39px -30px;
        }

        .content_main-button{
            padding: 20px 40px;
            width: 100%;
        }

        .contacts__btn{
            width: 100%;
        }
    }

    .footer{
        
        .footer__wrapper{
            min-width: 260px;
            min-height: 160px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .footer__logo{
            display: none;
        }

         .footer__social-network{
            border-bottom: 1px solid #e5e5e5;
            min-width: 260px;
            justify-content: center;
        }

        .footer__social-network, .footer__copyright{
            flex: 1 1 50%;
            display: flex;
            align-items: center;
        }
    }
}
